
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1499334758287-dc8133b315e9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container d-flex flex-column align-items-center">
    <h1>Get ready to be Awestruck !</h1>
    <p>Start your life and rent a rubber duck !!<p>
    <%# Search Form %>
    <div>
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="input-group">
          <div class="form-outline">
            <input class="form-control" type="search" name="search[query]" id="search_query" placeholder="Find ducks near you..." />
          </div>
          <button name="button" type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-between mt-5">
  <h2>Most wanted</h2>
</div>
<div class="container my-5">
  <div class="cards mb-5">
    <!-- TODO put url path for each duck's photo -->
    <% Duck.all[0..8].each do |duck| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
        <div class="d-flex flex-column align-items-center">
          <h3><%= duck.name %></h3>
          <%= link_to "Rent this duck", duck_path(duck.id), class: 'btn btn-ghost' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <% if user_signed_in?%>
      <%= link_to "See all ducks", ducks_path, class: 'btn btn-flat' %>
    <% else %>
      <%= link_to "Sign up for more ducks", new_user_registration_path, class: 'btn btn-flat' %>
    <% end %>
  </div>
</div>
