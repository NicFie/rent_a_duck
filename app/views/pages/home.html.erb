<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1499334758287-dc8133b315e9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container">
    <h1>Get ready to be Awestruck !
      <p>Start your life and rent a Duck !!<p>
    </h1>
  </div>
  <%# Search Form %>
  <div >
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group justify-content-center">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
</div>

<div class="container d-flex justify-content-between mt-5">
  <h2>Most wanted</h2>
  <%= link_to "Sign up for more ducks", '#', class: 'btn btn-flat' %>
</div>

<div class="container my-5">
  <div class="cards">
    <% 6.times do |duck| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1632877943287-64636ca57b7e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80)">
        <%= link_to "Rent this duck", '#', class: 'btn btn-ghost' %>
      </div>
    <% end %>
  </div>
</div>



